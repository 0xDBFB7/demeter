#!/usr/bin/perl -I./lib/
use strict;
use warnings;
use File::Basename;
use File::Spec;

use Wx qw(:splashscreen wxBITMAP_TYPE_PNG wxBITMAP_TYPE_XPM);

use Ifeffit::Demeter;
use Ifeffit::Demeter::UI::Hephaestus;

## -------- Manage the splash screen
Wx::InitAllImageHandlers();
my $logo   = File::Spec->catfile(dirname($INC{'Ifeffit/Demeter/UI/Hephaestus.pm'}), 'Hephaestus', 'data', 'vulcan.png');
my $bitmap = Wx::Bitmap->new( $logo, wxBITMAP_TYPE_PNG );
my $splash = Wx::SplashScreen->new( $bitmap, wxSPLASH_CENTRE_ON_SCREEN|wxSPLASH_TIMEOUT, 5000, undef, -1 );
$splash   -> Refresh;

my $window = Ifeffit::Demeter::UI::Hephaestus->new;
$window   -> MainLoop;

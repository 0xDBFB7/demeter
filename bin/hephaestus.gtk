#!/usr/bin/perl -I./lib/
use strict;
use warnings;
use Gtk2 '-init';

use Ifeffit::Demeter;
use Ifeffit::Demeter::UI::Gtk2::Hephaestus;

my $window = Ifeffit::Demeter::UI::Gtk2::Hephaestus->new;
$window->show_all;
$window->signal_connect (destroy => sub {
			   my $demeter = Ifeffit::Demeter->new;
			   $demeter->po->cleantemp;
			   Gtk2->main_quit;
			 });
$window->set_title ('Hephaestus');


Gtk2->main;


use warnings;
use strict;
use Ifeffit::Demeter;
use Getopt::Long;
use Regexp::Common;
use Readonly;
Readonly my $NUMBER => $RE{num}{real};

my ($feff6, $feff8, $abs, $sg, $rmax) = (0, 0, 0, 0, 0);
my $result = GetOptions (
			 "rmax=s" => \$rmax,
			 "6"	  => \$feff6,
			 "8"	  => \$feff8,
			 "a"	  => \$abs,
			 "s"	  => \$sg,
			);
## missing command line switches
##  atoms
##  ipot style choice
##  output precision
##  other output formats
##  write to a file

my $atoms = Ifeffit::Demeter::Atoms->new(file => $ARGV[0]||"atoms.inp");

my $which = ($feff6) ? "feff6"
          : ($feff8) ? "feff8"
          : ($abs)   ? "absorption"
          : ($sg)    ? "spacegroup"
          :            "feff6" ;
$atoms -> set(rmax=>$rmax) if ($rmax and $rmax =~ m{$NUMBER});
#print $atoms -> Write('atoms');
print $atoms -> Write($which);

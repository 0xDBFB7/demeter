[% # map of pages in the Demeter book
   # this file lives in the etc/ directory and is copied to the
   # config/ directory for each display medium when the configure
   # script is run

 map = {
	name = 'Artemis Users Guide'
	menu = [ 'index',
		 'intro',
		 'startup',
		 'data',
		 'feff',
		 'path',
		 'gds',
		 'fit',

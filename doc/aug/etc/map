[% SWITCH document_style %]
[% CASE 'html' %]
   [%# expand map recursively %]
   [% PROCESS config/expand %]
[% CASE 'latex' %]
   [%# do nothing %]
[% CASE 'pod' %]
   [%# expand map recursively %]
   [% PROCESS config/expand %]
[% END -%]

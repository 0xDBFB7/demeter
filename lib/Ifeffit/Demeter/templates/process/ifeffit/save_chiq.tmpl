{ # -*- ifm -*-
  # save chi(q) template
  #   {$S} returns the ifeffit group name
  #   {$D} returns the data group name
  #   {$D->get("parameter")} returns the value of that parameter
  # the filename, titles, and kweight were passed to the template
  # method $titles should contain a string that Ifeffit will be able
  # to interpret as a set of title lines already set in Ifeffit.  one
  # common way of doing this is with a glob structure, like
  # $dem_data_*
  # example:
  #   $string = $self->template("process", "save_chir",
  #                             {filename => $filename,
  #                              titles   => "\$dem_data_*"});
}
##|
##| saving "{$S->label}" as back-transformed chi(k)
set {$S}.chik = {$S}.k^{$P->get("kweight")}*{$S}.chi
write_data(file="{$filename}", ${$titles}, ${$D}_title_*,
           label="q chiq_re chiq_im chiq_mag chiq_pha win chik",
           {$S}.q, {$S}.chiq_re, {$S}.chiq_im,
           {$S}.chiq_mag, {$S}.chiq_pha, {$S}.win, {$S}.chik)
erase {$S}.chik

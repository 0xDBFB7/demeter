{ # -*- ifm -*-
  # template for new plot in energy
  #   {$D->group} returns the ifeffit group name
  #   {$D->parameter} returns the value of that parameter
  #   {$P->parameter} returns the value of a Plot parameter
  #
  #  color fg bg grid gridcolor
}
{
  $emin = $D->bkg_e0 + $P->emin;
  $emax = $D->bkg_e0 + $P->emax;
  $datastyle = ($P->datastyle eq 'solid') ? 'lines' : 'points';
  ($ylabel = $P->ylabel) =~ s[\\gm][{/Symbol m}];
  $file = $P->tempfile;
  $D->points(file    => $file,
             space   => 'E', 
	     suffix  => $P->e_part, 
	     shift   => $D->bkg_eshift,
	     scale   => $D->plot_multiplier,
	     yoffset => $D->y_offset
	    );
  q{}
}
## gnuplot script
unset label

set title "\{/*1.5 {$P->title}\}"
set xlabel "\{/*1.2 Energy&\{aa\}(eV)\}"
set ylabel "\{/*1.2 {$ylabel}\}"
set xrange [ {$emin} : {$emax} ]

# ifeffit group = {$D->group}
plot '{$file}' using 1:2 with {$datastyle} ls {$P->increm+1} title "{$P->key}"

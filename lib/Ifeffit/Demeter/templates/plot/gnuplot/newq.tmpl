{ # -*- ifm -*-
  # template for new plot in q
  #   {$D->group} returns the ifeffit group name
  #   {$D->parameter} returns the value of that parameter
  #   {$P->parameter} returns the value of a Plot parameter
  #
  #  color fg bg grid gridcolor
}
{
  $datastyle = ($P->datastyle eq 'solid') ? 'lines' : 'points';
  $ylabel = $P->gnuplot_qylabel;
  $file = $P->tempfile;
  $S->points(file    => $file,
             space   => 'q', 
	     suffix  => ($P->q_pl eq 'm') ? 'chiq_mag'
	              : ($P->q_pl eq 'r') ? 'chiq_re'
	              : ($P->q_pl eq 'i') ? 'chiq_im'
	              : ($P->q_pl eq 'p') ? 'chiq_pha'
		      :                     'chiq_mag',
	     scale   => $D->plot_multiplier,
	     yoffset => $D->y_offset,
	    );
  $thiskey = $C->get('plot_part') || $P->key;
  if (ref($PT) =~ m{Path}) { $thiskey = $PT->name || 'Path '.$PT->Index };
  q{}
}
## gnuplot script
unset label

set title "\{/*1.5 {$P->title}\}"
set xlabel "\{/*1.2 Wavenumber&\{aa\}(\{\305\}^\{-1\})\}"
set ylabel "\{/*1.2 {$ylabel}\}"
set xrange [ {$P->qmin} : {$P->qmax} ]

# ifeffit group = {$D->group}
plot '{$file}' using 1:2 with {$datastyle} ls {$P->increm+1} title "{thiskey}"

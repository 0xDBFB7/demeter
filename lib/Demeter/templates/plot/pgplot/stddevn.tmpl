{ # -*- ifm -*-
  # template for normalized data+/-standard deviation in energy
  #   {$D->group} returns the ifeffit group name
  #   {$D->parameter} returns the value of that parameter
  #   {$P->parameter} returns the value of a Plot parameter
  $suffix = ($D->bkg_flatten) ? 'flat' : 'norm';
  q{};
}
plot("{$D->group}.energy+{$D->bkg_eshift}", "{$D->plot_multiplier}*({$D->group}.{$suffix}+{$D->group}.stddev)+{$D->y_offset}",
     style={$P->datastyle}, color="{$P->color}", key="+ Std. Dev.")
plot("{$D->group}.energy+{$D->bkg_eshift}", "{$D->plot_multiplier}*({$D->group}.{$suffix}-{$D->group}.stddev)+{$D->y_offset}",
     style={$P->datastyle}, color="{$P->color}", key="- Std. Dev.")

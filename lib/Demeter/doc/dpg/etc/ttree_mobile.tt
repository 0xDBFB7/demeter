### directories
src  = [% installdir %]/templates/src
lib  = [% installdir %]/templates/mobile
dest = [% installdir %]/mobile

### copy images and other binary files
copy = \.(png|gif|jpg|pdf)$
### copy athena, artemis, and demeter project files
copy = \.(prj|apj|dpj)$
### copy the style sheet
copy = \.css$

### ignore svn and emacs backup/temporary files
ignore = \.(svn)\b
ignore = \#$
ignore = ~$
ignore = \.example$
ignore = \.sty$
ignore = \.ltx$
ignore = \.pod$
ignore = ^auto

### options
verbose
recurse
recursion

### TT options
pre_process = config/main
wrapper     = site/wrapper

### local variables
define rootdir = [% installdir %]
define rooturl = [% installdir %]
define document_style = 'html'
define debug   = 0

### en passant suffix conversion
suffix tt=html
